<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js" integrity="sha384-cs/chFZiN24E4KMATLdqdvsezGxaGsi4hLGOzlXwp5UZB1LY//20VyM2taTB4QvJ" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js" integrity="sha384-uefMccjFJAIv6A+rW+L4AHf99KvxDjWSu1z9VI8SKNVmz4sk7buKt/6v9KI65qnm" crossorigin="anonymous"></script>
<script>
  $(document).ready(function(){
     $( "#sortable1, #sortable2" ).sortable({
       connectWith: ".connectedSortable"
     }).disableSelection();

     $('#btn-submitAddCategoryPage').on('click', function(event){
       var button = $(this);
       var boardId = button.attr('data-board-id');
       $.ajax({
         type: "POST",
         url: `/board/${boardId}/category/add`,
         data: $('#addCategoryTitle-form').serialize(),
         dataType: "json",
       })
       .done(function(json){
         if (json.err){
           $('.addCategoryModal-error-container').html(json.err);
           $('.addCategoryModal-error-container').css("display", "block");
         }else{
           console.log("JSON", json);
           //add new category with title
           $('#target-body').prepend(`<div class="column">
             <div class="card categoryCard" style="width: 18rem;">
               <div class="card-body">
                 <h5 class="card-title cardTask">${json.categoryName}
                   <button type="button" class="btn btn-outline-primary editCategoryButton" data-toggle="modal" data-target="#editCategoryModal">
                     Edit
                   </button>
                   <button type="button" class="btn btn-outline-danger deleteCategoryButton" data-toggle="modal" data-target="#deleteCategoryModal">
                     Delete
                   </button>
                 </h5>
                 <a href="#" data-toggle="modal" data-target="#addTaskModal" class="card-text">+ Add New Tasks</a>
               </div>
               <ul  id="${json.categoryName}" class="list-group list-group-flush connectedSortable">
               </ul>
             </div>
           </div>`);

           $('#addCategoryModal').modal('hide');
           $('#addCategoryTitle-form')[0].reset();
         }
       })
     })
  });
</script>
