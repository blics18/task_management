  <div class="row">
    <div class="col-sm-3">
      <div class="card">
        <a href="#" data-toggle="modal" data-target="#addCategoryModal" class="card-body">
          <h5 class="card-title">Add Category</h5>
        </a>
      </div>
    </div>
  </div>

  <!-- Modal -->
  <div class="modal fade" id="addCategoryModal" tabindex="-1" role="dialog" aria-labelledby="addCategoryModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="addCategoryModalLabel">Add Category</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <form id="addCategoryTitle-form">
            <div class="addCategoryPage">
                <input class="title" type="text" name="title" placeholder="Category Title">
            </div>
          </form>

        </div>
        <div class="modal-footer">
          <button id="btn-cancelAddCategoryPage" type="button" class="btn btn-outline-danger" data-dismiss="modal">Close</button>
          <button id="btn-submitAddCategoryPage" type="button" class="btn btn-outline-success">Submit</button>
        </div>
      </div>
    </div>
  </div>

